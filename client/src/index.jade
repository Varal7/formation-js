doctype html
html(ng-app="todo-list" ng-controller="TodoListController")
  head
    meta(charset="utf-8")
    title {{title}}
  body
    h1 {{title}}
    script(src="../../bower_components/angular/angular.js")
    script(src="../../bower_components/angular-resource/angular-resource.js")
    script(src="app.js")
    script(src="lb-services.js")
    ul(ng-repeat="todo in todolist")
        span(ng-click="remove(todo)") X
        span -
        span {{todo.task}} {{todo.priority}} {{todo.checked}}

    form(ng-submit="add()")
        input(type="text" ng-model="newTask")
        input(type="number" ng-model="newPriority")
        button(type="submit") Ajouter
